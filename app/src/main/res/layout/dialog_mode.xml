<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/colorBackground"
    android:maxWidth="100dp"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:contentPadding="5dp">


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical">


    <!--Learn-->
    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:text="Select Mode"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="30"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_top"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="30"
            app:cardBackgroundColor="@color/green"
            app:cardCornerRadius="10dp"
            app:contentPadding="10dp">


            <TextView
                android:id="@+id/text_card_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Learn"
                android:textAlignment="center" />

            <ImageButton
                android:id="@+id/learnMode"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:scaleType="fitCenter"
                android:tooltipText="Learn"
                app:srcCompat="@drawable/book" />

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_middle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="30"
            app:cardBackgroundColor="@color/yellow"
            app:cardCornerRadius="10dp"
            app:contentPadding="10dp">

            <TextView
                android:id="@+id/text_card_middle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Practise"
                android:textAlignment="center" />


            <ImageButton
                android:id="@+id/practiseMode"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:elevation="0dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/muscle" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/card_view_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:layout_weight="30"
            app:cardBackgroundColor="@color/red"
            app:cardCornerRadius="10dp"
            app:contentPadding="10dp">

            <TextView
                android:id="@+id/text_card_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Test"
                android:textAlignment="center" />


            <ImageButton
                android:id="@+id/testMode"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="30dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/test" />


        </android.support.v7.widget.CardView>
    </LinearLayout>

    <!--Practise-->

    <!--Test-->


</LinearLayout>
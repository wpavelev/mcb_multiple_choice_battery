<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.wpavelev.mcb_multiplechoicebattery.Activities.MainActivity"
    >


    <TextView
        android:id="@+id/questionTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:scrollbars="vertical"
        android:text="Question"
        android:textAlignment="viewStart"
        android:textColor="@color/colorPrimary"
        android:textSize="14sp" />

    <ListView
        android:id="@+id/listViewAnswers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:choiceMode="none"
        android:divider="@color/colorBackground"
        android:dividerHeight="5dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/TaskViewButtonLeft"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background_normal"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="@string/last_item_button"
            android:textColor="@color/colorBackground" />

        <Button
            android:id="@+id/TaskViewButtonMiddle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background_normal"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="@string/skip"
            android:textColor="@color/colorBackground" />

        <Button
            android:id="@+id/TaskViewButtonRight"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:drawable/editbox_background_normal"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="@string/next_item_button"
            android:textColor="@color/colorBackground" />
    </LinearLayout>
</LinearLayout>
